<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AsadorMoron.Views.Clientes.DetalleArticulosView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:badge="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
    xmlns:templates="clr-namespace:AsadorMoron.Views.Templates"
    x:Name="ViewDetalleArticulos"
    BackgroundColor="{StaticResource Rojo}">
    <NavigationPage.TitleView>
        <Grid HorizontalOptions="FillAndExpand" ColumnDefinitions="*,Auto">
            <Grid
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="0,0,0,5"
                HeightRequest="40"
                HorizontalOptions="FillAndExpand">
                <Image
                    Margin="0,0,50,0"
                    Aspect="AspectFit"
                    HeightRequest="35"
                    Source="logomorado.png"
                    VerticalOptions="StartAndExpand" />
            </Grid>
            <badge:SfBadgeView
                Grid.Column="1"
                x:Name="badge"
                Margin="0,0,10,0"
                BadgeText="{Binding Cantidad, Mode=TwoWay}"
                HorizontalOptions="End"
                VerticalOptions="Center">
                <badge:SfBadgeView.Content>
                    <ImageButton
                        BackgroundColor="Transparent"
                        Command="{Binding IrDetallePedidoCommand}"
                        HeightRequest="30"
                        Source="carrito.png"
                        WidthRequest="30" />
                </badge:SfBadgeView.Content>
                <badge:SfBadgeView.BadgeSettings>
                    <badge:BadgeSettings Background="{DynamicResource Amarillo}" TextColor="Black" FontFamily="Nunito_bold" Type="None" />
                </badge:SfBadgeView.BadgeSettings>
            </badge:SfBadgeView>
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <Grid RowDefinitions="Auto,*,Auto">
            <!-- Banner de puntos -->
            <StackLayout Grid.Row="0" IsVisible="{Binding SistemaPuntos}" BackgroundColor="{DynamicResource Amarillo}" HorizontalOptions="FillAndExpand">
                <Label Text="{Binding Puntos,StringFormat='Tienes {0} puntos'}" HorizontalTextAlignment="Center"
                       TextColor="{DynamicResource Negro}" FontSize="20" FontFamily="Nunito_bold"/>
            </StackLayout>

            <!-- Contenido scrolleable -->
            <ScrollView Grid.Row="1" BackgroundColor="White">
                <StackLayout Spacing="0" Padding="10">
                    <!-- Imagen del producto -->
                    <Border Padding="0" StrokeShape="RoundRectangle 12" StrokeThickness="0" HeightRequest="180">
                        <Image
                            Aspect="AspectFill"
                            Source="{Binding Articulo.imagen}"
                            VerticalOptions="FillAndExpand"
                            HorizontalOptions="FillAndExpand"/>
                    </Border>

                    <!-- Nombre y descripción -->
                    <Label
                        Margin="0,15,0,5"
                        FontFamily="Nunito_bold"
                        FontSize="22"
                        HorizontalTextAlignment="Center"
                        Text="{Binding Articulo.nombre}"
                        TextColor="{DynamicResource Negro}" />
                    <Label
                        Margin="0,0,0,15"
                        FontFamily="Nunito"
                        FontSize="14"
                        HorizontalTextAlignment="Center"
                        Text="{Binding Articulo.descripcion}"
                        TextColor="#666666"/>

                    <!-- OPCIONES (cuando no es combo) -->
                    <StackLayout IsVisible="{Binding TieneOpciones}" Spacing="0">
                        <!-- Header Opciones -->
                        <Border Padding="12,8" StrokeShape="RoundRectangle 8" StrokeThickness="0" BackgroundColor="{StaticResource Amarillo}" Margin="0,10,0,5"
                               IsVisible="{Binding Combo, Converter={StaticResource InverseBoolConverter}}">
                            <Label FontFamily="Nunito_bold" FontSize="16" TextColor="{DynamicResource Negro}">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="OPCIONES" FontAttributes="Bold"/>
                                        <Span Text=" (Seleccione una)" FontSize="14"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Border>

                        <!-- Lista de Opciones - CollectionView para mejor rendimiento -->
                        <CollectionView
                            ItemsSource="{Binding OpcionesLista}"
                            ItemSizingStrategy="MeasureFirstItem"
                            VerticalScrollBarVisibility="Never"
                            IsVisible="{Binding Combo, Converter={StaticResource InverseBoolConverter}}">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="2"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8,6" BackgroundColor="#F8F8F8" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10" HeightRequest="44">
                                        <CheckBox
                                            VerticalOptions="Center"
                                            IsChecked="{Binding seleccionado}"
                                            Color="{DynamicResource Rojo}"
                                            CheckedChanged="CheckBox_CheckedChanged"
                                            AutomationId="{Binding id}" />
                                        <Label
                                            Grid.Column="1"
                                            FontFamily="Nunito"
                                            FontSize="16"
                                            Text="{Binding opcion}"
                                            TextColor="{DynamicResource Negro}"
                                            VerticalOptions="Center"/>
                                        <Label
                                            Grid.Column="2"
                                            FontFamily="Nunito_bold"
                                            FontSize="15"
                                            IsVisible="{Binding visiblePuntos, Converter={StaticResource InverseBoolConverter}}"
                                            Text="{Binding precio, StringFormat='{0:N2} €'}"
                                            TextColor="{DynamicResource Rojo}"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- COMBOS (múltiples secciones) -->
                        <StackLayout IsVisible="{Binding Combo}" Spacing="10">
                            <!-- Combo 1: Entrantes -->
                            <Border Padding="12,8" StrokeShape="RoundRectangle 8" StrokeThickness="0" BackgroundColor="{StaticResource Amarillo}" Margin="0,10,0,5">
                                <Label Text="1. ENTRANTES" FontFamily="Nunito_bold" FontSize="14" TextColor="{DynamicResource Negro}"/>
                            </Border>
                            <StackLayout BindableLayout.ItemsSource="{Binding Combo1}" Spacing="2">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8,4" BackgroundColor="#F8F8F8" ColumnDefinitions="Auto,*">
                                            <CheckBox IsChecked="{Binding Seleccionado}" Color="{DynamicResource Rojo}" CheckedChanged="CheckBox_CheckedChanged" AutomationId="{Binding id}"/>
                                            <Label Grid.Column="1" Text="{Binding nombre}" FontFamily="Nunito" FontSize="16" TextColor="{DynamicResource Negro}" VerticalOptions="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>

                            <!-- Combo 2 -->
                            <Border Padding="12,8" StrokeShape="RoundRectangle 8" StrokeThickness="0" BackgroundColor="{StaticResource Amarillo}">
                                <Label Text="2. PRIMER PLATO 1" FontFamily="Nunito_bold" FontSize="14" TextColor="{DynamicResource Negro}"/>
                            </Border>
                            <StackLayout BindableLayout.ItemsSource="{Binding Combo2}" Spacing="2">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8,4" BackgroundColor="#F8F8F8" ColumnDefinitions="Auto,*">
                                            <CheckBox IsChecked="{Binding Seleccionado}" Color="{DynamicResource Rojo}" CheckedChanged="CheckBox_CheckedChanged" AutomationId="{Binding id}"/>
                                            <Label Grid.Column="1" Text="{Binding nombre}" FontFamily="Nunito" FontSize="16" TextColor="{DynamicResource Negro}" VerticalOptions="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>

                            <!-- Combo 3 -->
                            <Border Padding="12,8" StrokeShape="RoundRectangle 8" StrokeThickness="0" BackgroundColor="{StaticResource Amarillo}">
                                <Label Text="3. PRIMER PLATO 2" FontFamily="Nunito_bold" FontSize="14" TextColor="{DynamicResource Negro}"/>
                            </Border>
                            <StackLayout BindableLayout.ItemsSource="{Binding Combo3}" Spacing="2">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8,4" BackgroundColor="#F8F8F8" ColumnDefinitions="Auto,*">
                                            <CheckBox IsChecked="{Binding Seleccionado}" Color="{DynamicResource Rojo}" CheckedChanged="CheckBox_CheckedChanged" AutomationId="{Binding id}"/>
                                            <Label Grid.Column="1" Text="{Binding nombre}" FontFamily="Nunito" FontSize="16" TextColor="{DynamicResource Negro}" VerticalOptions="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>

                            <!-- Combo 4 -->
                            <Border Padding="12,8" StrokeShape="RoundRectangle 8" StrokeThickness="0" BackgroundColor="{StaticResource Amarillo}">
                                <Label Text="4. SEGUNDO PLATO 1" FontFamily="Nunito_bold" FontSize="14" TextColor="{DynamicResource Negro}"/>
                            </Border>
                            <StackLayout BindableLayout.ItemsSource="{Binding Combo4}" Spacing="2">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8,4" BackgroundColor="#F8F8F8" ColumnDefinitions="Auto,*">
                                            <CheckBox IsChecked="{Binding Seleccionado}" Color="{DynamicResource Rojo}" CheckedChanged="CheckBox_CheckedChanged" AutomationId="{Binding id}"/>
                                            <Label Grid.Column="1" Text="{Binding nombre}" FontFamily="Nunito" FontSize="16" TextColor="{DynamicResource Negro}" VerticalOptions="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>

                            <!-- Combo 5 -->
                            <Border Padding="12,8" StrokeShape="RoundRectangle 8" StrokeThickness="0" BackgroundColor="{StaticResource Amarillo}">
                                <Label Text="5. SEGUNDO PLATO 2" FontFamily="Nunito_bold" FontSize="14" TextColor="{DynamicResource Negro}"/>
                            </Border>
                            <StackLayout BindableLayout.ItemsSource="{Binding Combo5}" Spacing="2">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8,4" BackgroundColor="#F8F8F8" ColumnDefinitions="Auto,*">
                                            <CheckBox IsChecked="{Binding Seleccionado}" Color="{DynamicResource Rojo}" CheckedChanged="CheckBox_CheckedChanged" AutomationId="{Binding id}"/>
                                            <Label Grid.Column="1" Text="{Binding nombre}" FontFamily="Nunito" FontSize="16" TextColor="{DynamicResource Negro}" VerticalOptions="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>

                            <!-- Combo 6: Bebida -->
                            <Border Padding="12,8" StrokeShape="RoundRectangle 8" StrokeThickness="0" BackgroundColor="{StaticResource Amarillo}">
                                <Label Text="6. BEBIDA" FontFamily="Nunito_bold" FontSize="14" TextColor="{DynamicResource Negro}"/>
                            </Border>
                            <StackLayout BindableLayout.ItemsSource="{Binding Combo6}" Spacing="2">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8,4" BackgroundColor="#F8F8F8" ColumnDefinitions="Auto,*">
                                            <CheckBox IsChecked="{Binding Seleccionado}" Color="{DynamicResource Rojo}" CheckedChanged="CheckBox_CheckedChanged" AutomationId="{Binding id}"/>
                                            <Label Grid.Column="1" Text="{Binding nombre}" FontFamily="Nunito" FontSize="16" TextColor="{DynamicResource Negro}" VerticalOptions="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>

                            <!-- Combo 7: Postre 1 -->
                            <Border Padding="12,8" StrokeShape="RoundRectangle 8" StrokeThickness="0" BackgroundColor="{StaticResource Amarillo}">
                                <Label Text="7. POSTRE 1" FontFamily="Nunito_bold" FontSize="14" TextColor="{DynamicResource Negro}"/>
                            </Border>
                            <StackLayout BindableLayout.ItemsSource="{Binding Combo7}" Spacing="2">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8,4" BackgroundColor="#F8F8F8" ColumnDefinitions="Auto,*">
                                            <CheckBox IsChecked="{Binding Seleccionado}" Color="{DynamicResource Rojo}" CheckedChanged="CheckBox_CheckedChanged" AutomationId="{Binding id}"/>
                                            <Label Grid.Column="1" Text="{Binding nombre}" FontFamily="Nunito" FontSize="16" TextColor="{DynamicResource Negro}" VerticalOptions="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>

                            <!-- Combo 8: Postre 2 -->
                            <Border Padding="12,8" StrokeShape="RoundRectangle 8" StrokeThickness="0" BackgroundColor="{StaticResource Amarillo}">
                                <Label Text="8. POSTRE 2" FontFamily="Nunito_bold" FontSize="14" TextColor="{DynamicResource Negro}"/>
                            </Border>
                            <StackLayout BindableLayout.ItemsSource="{Binding Combo8}" Spacing="2">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8,4" BackgroundColor="#F8F8F8" ColumnDefinitions="Auto,*">
                                            <CheckBox IsChecked="{Binding Seleccionado}" Color="{DynamicResource Rojo}" CheckedChanged="CheckBox_CheckedChanged" AutomationId="{Binding id}"/>
                                            <Label Grid.Column="1" Text="{Binding nombre}" FontFamily="Nunito" FontSize="16" TextColor="{DynamicResource Negro}" VerticalOptions="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>

                    <!-- CANTIDAD (Modo Tienda) -->
                    <StackLayout IsVisible="{Binding ModoTienda}" Margin="0,15,0,0">
                        <Border Padding="12,8" StrokeShape="RoundRectangle 8" StrokeThickness="0" BackgroundColor="{StaticResource Amarillo}" Margin="0,0,0,10">
                            <Label Text="CANTIDAD" FontFamily="Nunito_bold" FontSize="14" TextColor="{DynamicResource Negro}"/>
                        </Border>
                        <Border Padding="10" StrokeShape="RoundRectangle 20" StrokeThickness="0" BackgroundColor="#F0F0F0" HorizontalOptions="Center">
                            <Grid ColumnDefinitions="40,60,40" ColumnSpacing="5">
                                <ImageButton
                                    Grid.Column="0"
                                    BackgroundColor="Transparent"
                                    Command="{Binding Path=BindingContext.ClickMenosCommand, Source={x:Reference Name=ViewDetalleArticulos}}"
                                    CommandParameter="{Binding id}"
                                    HeightRequest="40"
                                    WidthRequest="40"
                                    Source="btnmenos.png" />
                                <Label
                                    Grid.Column="1"
                                    FontFamily="Nunito_bold"
                                    FontSize="20"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding CantidadOpcion, Mode=TwoWay}"
                                    TextColor="Black"
                                    VerticalTextAlignment="Center" />
                                <ImageButton
                                    Grid.Column="2"
                                    BackgroundColor="Transparent"
                                    Command="{Binding Path=BindingContext.ClickMasCommand, Source={x:Reference Name=ViewDetalleArticulos}}"
                                    CommandParameter="{Binding id}"
                                    HeightRequest="40"
                                    WidthRequest="40"
                                    Source="nuevo.png" />
                            </Grid>
                        </Border>
                    </StackLayout>

                    <!-- INGREDIENTES/EXTRAS - CollectionView para mejor rendimiento -->
                    <StackLayout IsVisible="{Binding TieneIngredientes}" Margin="0,15,0,0">
                        <Border Padding="12,8" StrokeShape="RoundRectangle 8" StrokeThickness="0" BackgroundColor="{StaticResource Amarillo}" Margin="0,0,0,5">
                            <Label Text="{Binding TextoIngredientes}" FontFamily="Nunito_bold" FontSize="14" TextColor="{DynamicResource Negro}" TextTransform="Uppercase"/>
                        </Border>
                        <CollectionView
                            ItemsSource="{Binding ListadoIngredientes}"
                            ItemSizingStrategy="MeasureFirstItem"
                            VerticalScrollBarVisibility="Never">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="4"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="10,8" BackgroundColor="#F8F8F8" ColumnDefinitions="*,Auto" HeightRequest="50">
                                        <StackLayout Spacing="0" VerticalOptions="Center">
                                            <Label FontFamily="Nunito_bold" FontSize="15" Text="{Binding nombre}" TextColor="{DynamicResource Negro}"/>
                                            <Label FontFamily="Nunito" FontSize="13" Text="{Binding precio, StringFormat='{0:N2} €'}" TextColor="{DynamicResource Rojo}"/>
                                        </StackLayout>
                                        <Grid Grid.Column="1" Padding="5" BackgroundColor="#E8E8E8" VerticalOptions="Center" ColumnDefinitions="32,40,32" ColumnSpacing="0">
                                            <ImageButton
                                                Grid.Column="0"
                                                BackgroundColor="Transparent"
                                                Command="{Binding Path=BindingContext.ClickMenosIngCommand, Source={x:Reference Name=ViewDetalleArticulos}}"
                                                CommandParameter="{Binding idIngrediente}"
                                                HeightRequest="32"
                                                WidthRequest="32"
                                                Source="btnmenos.png" />
                                            <Label
                                                Grid.Column="1"
                                                FontFamily="Nunito_bold"
                                                FontSize="16"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding Cantidad, Mode=TwoWay}"
                                                TextColor="Black"
                                                VerticalTextAlignment="Center" />
                                            <ImageButton
                                                Grid.Column="2"
                                                BackgroundColor="Transparent"
                                                Command="{Binding Path=BindingContext.ClickMasIngCommand, Source={x:Reference Name=ViewDetalleArticulos}}"
                                                CommandParameter="{Binding idIngrediente}"
                                                HeightRequest="32"
                                                WidthRequest="32"
                                                Source="nuevo.png" />
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>

                    <!-- ALÉRGENOS -->
                    <StackLayout IsVisible="{Binding TieneAlergenos}" Margin="0,15,0,0">
                        <Border Padding="12,8" StrokeShape="RoundRectangle 8" StrokeThickness="0" BackgroundColor="{StaticResource Amarillo}" Margin="0,0,0,5">
                            <Label Text="ALÉRGENOS" FontFamily="Nunito_bold" FontSize="14" TextColor="{DynamicResource Negro}"/>
                        </Border>
                        <FlexLayout
                            x:Name="HLAlergenos"
                            Margin="0,5"
                            BindableLayout.ItemsSource="{Binding AlergenosLista}"
                            Direction="Row"
                            JustifyContent="Center"
                            Wrap="Wrap">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <templates:AlergenosItemTemplate />
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </FlexLayout>
                    </StackLayout>

                    <!-- COMENTARIO -->
                    <StackLayout Margin="0,15,0,20">
                        <Border Padding="12,8" StrokeShape="RoundRectangle 8" StrokeThickness="0" BackgroundColor="{StaticResource Amarillo}" Margin="0,0,0,5">
                            <Label Text="COMENTARIO" FontFamily="Nunito_bold" FontSize="14" TextColor="{DynamicResource Negro}"/>
                        </Border>
                        <Border StrokeThickness="1" Stroke="#E0E0E0" StrokeShape="RoundRectangle 8" Padding="0">
                            <Editor
                                Text="{Binding Comentario}"
                                HeightRequest="100"
                                Placeholder="Escribe aquí tus comentarios..."
                                PlaceholderColor="#AAAAAA"
                                BackgroundColor="White"
                                TextColor="{DynamicResource Negro}"/>
                        </Border>
                    </StackLayout>
                </StackLayout>
            </ScrollView>

            <!-- Botón Añadir -->
            <Button
                Grid.Row="2"
                Margin="16,10,16,20"
                BackgroundColor="{DynamicResource Rojo}"
                Command="{Binding cmdActualizarCaja}"
                CornerRadius="25"
                FontFamily="Nunito_bold"
                FontSize="18"
                HeightRequest="55"
                HorizontalOptions="FillAndExpand"
                IsVisible="{Binding Path=BindingContext.ModoTienda, Source={x:Reference Name=ViewDetalleArticulos}}"
                Text="{Binding TextoCaja}"
                TextColor="{DynamicResource Blanco}" />
            <Button
                Grid.Row="2"
                Margin="16,10,16,20"
                BackgroundColor="{DynamicResource Rojo}"
                Command="{Binding cmdActualizarCajaPuntos}"
                CornerRadius="25"
                FontFamily="Nunito_bold"
                FontSize="18"
                HeightRequest="55"
                HorizontalOptions="FillAndExpand"
                IsVisible="{Binding Path=BindingContext.VisiblePuntos, Source={x:Reference Name=ViewDetalleArticulos}}"
                Text="{Binding TextoCajaPuntos}"
                TextColor="{DynamicResource Blanco}" />
        </Grid>
    </ContentPage.Content>
</ContentPage>
