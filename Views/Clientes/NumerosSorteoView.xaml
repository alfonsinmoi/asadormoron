<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AsadorMoron.Views.Clientes.NumerosSorteoView">
    <NavigationPage.TitleView>
        <Grid HorizontalOptions="FillAndExpand">
            <Label
                FontFamily="Syne"
                FontSize="25"
                Margin="0,0,50,0"
                HorizontalTextAlignment="Center"
                Text="Sorteos"
                TextColor="{DynamicResource Amarillo}"
                VerticalOptions="Center" />
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <Grid
            BackgroundColor="White"
            Margin="{OnPlatform iOS='0,90,0,0',
                                Android='0,0,0,0',
                                WinUI='0'}"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            RowDefinitions="Auto,*,Auto">
            <Label Margin="15,0" Text="Estos son tus números para el sorteo de un Iphone 13 Pro Max" FontFamily="Syne" TextColor="{DynamicResource Amarillo}" HorizontalTextAlignment="Center"/>
            <Label Margin="15" Text="El sorteo tendrá lugar una vez alcanzados los 10000 números. Muchas Suerte!!!"  FontFamily="Syne" TextColor="{DynamicResource Amarillo}" HorizontalTextAlignment="Center"
                   Grid.Row="2"/>
            <CollectionView
                Grid.Row="1"
                Margin="15,10"
                BackgroundColor="Transparent"
                HorizontalOptions="FillAndExpand"
                ItemsSource="{Binding Numeros}"
                SelectionMode="None"
                VerticalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding numero}" FontFamily="Syne" TextColor="Black" BackgroundColor="Transparent" FontSize="22" HorizontalTextAlignment="Center" Margin="0,5"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
