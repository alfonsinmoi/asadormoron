<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AsadorMoron.Views.Clientes.PedidoConfirmadoComercioView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    NavigationPage.HasNavigationBar="False"
    BackgroundColor="{StaticResource Rojo}">


    <ScrollView Margin="{OnPlatform iOS='0,60,0,0', Android='0,40,0,0', UWP='0,0,0,0'}">
        <StackLayout Margin="15,0" Orientation="Vertical">
            <Image
                Aspect="AspectFit"
                HeightRequest="150"
                HorizontalOptions="Center"
                Source="logo_morado.png"
                VerticalOptions="End" />
            <Label
                FontFamily="Nunito_bold"
                FontSize="20"
                HorizontalTextAlignment="Center"
                Text="{Binding TextoPromocion}"
                TextColor="{DynamicResource Blanco}" />
            <Label
                FontFamily="Nunito"
                FontSize="20"
                HorizontalTextAlignment="Center"
                Text="Gracias por realizar su pedido en "
                TextColor="{DynamicResource Blanco}" />
            <Label
                FontFamily="Nunito"
                FontSize="25"
                HorizontalTextAlignment="Center"
                Text="{Binding NombreEst}"
                TextColor="{DynamicResource Blanco}" />
            <Label
                Margin="0,15,0,0"
                FontFamily="Nunito"
                FontSize="16"
                HorizontalTextAlignment="Center"
                TextColor="{DynamicResource Blanco}" >
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Recibirá su pedido, con código "></Span>
                        <Span Text=": "/>
                        <Span Text="{Binding Codigo}"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label
                FontFamily="Nunito"
                FontSize="28"
                HorizontalTextAlignment="Center"
                Text="{Binding FechaEntrega}"
                TextColor="{DynamicResource Blanco}" />
            <Label
                Margin="0,15,0,0"
                FontFamily="Nunito"
                FontSize="20"
                HorizontalTextAlignment="Center"
                Text="Gracias por utilizar PolloAndaluz!!!"
                TextColor="{DynamicResource Blanco}" />
            <Button
                Margin="0,10,0,0"
                BackgroundColor="{DynamicResource Amarillo}"
                Command="{Binding VolverCommand}"
                FontFamily="Nunito_bold"
                HeightRequest="40"
                Text="Aceptar"
                TextColor="Black"
                VerticalOptions="End" />
        </StackLayout>
    </ScrollView>


</ContentPage>