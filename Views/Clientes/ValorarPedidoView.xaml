<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="AsadorMoron.Views.Clientes.ValorarPedidoView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:rating="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
    BackgroundColor="{DynamicResource Amarillo}">
    <NavigationPage.TitleView>
        <Grid HorizontalOptions="FillAndExpand" ColumnDefinitions="*,Auto">
            <Label
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="0,0,50,0"
                FontFamily="Syne"
                FontSize="25"
                HorizontalTextAlignment="Center"
                Text="Valoración"
                TextColor="{DynamicResource Rojo}"
                VerticalOptions="Center" />
        </Grid>
    </NavigationPage.TitleView>
    <StackLayout Margin="{OnPlatform iOS='0,90,0,0',
                                Android='0,0,0,0',
                                UWP='0,0,0,0'}"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand">
         <Image
                    Margin="{OnPlatform iOS='0,10,0,20',
                                        Android='0,10,0,20',
                                        Default='0,40,0,20'}"
                    Aspect="AspectFit"
                    HeightRequest="65"
                    HorizontalOptions="Center"
                    Source="logoqoorder.png"
                    VerticalOptions="Start" />
    <ScrollView VerticalOptions="FillAndExpand" BackgroundColor="White">
        <StackLayout>
            <Grid Margin="20" ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    FontFamily="Syne_Medium"
                    FontSize="14"
                    HorizontalOptions="Start"
                    TextColor="{DynamicResource Rojo}">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Código"/>
                            <Span Text=": "/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    FontFamily="Syne_Regular"
                    FontSize="14"
                    HorizontalOptions="Start"
                    HorizontalTextAlignment="Start"
                    Text="{Binding Pedido.codigoPedido}"
                    TextColor="{DynamicResource Amarillo}" />
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    FontFamily="Syne_Medium"
                    FontSize="14"
                    HorizontalOptions="Start"
                    TextColor="{DynamicResource Rojo}">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Fecha"/>
                            <Span Text=": "/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label
                    Grid.Row="1"
                    Grid.Column="1"
                    FontFamily="Syne_Regular"
                    FontSize="14"
                    HorizontalOptions="Start"
                    HorizontalTextAlignment="Start"
                    Text="{Binding Pedido.fechaEntrega, StringFormat='{0: dd/MM/yyyy}'}"
                    TextColor="{DynamicResource Amarillo}" />
                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    FontFamily="Syne_Medium"
                    FontSize="14"
                    HorizontalOptions="Start"
                    TextColor="{DynamicResource Rojo}">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Establecimiento"/>
                            <Span Text=": "/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label
                    Grid.Row="2"
                    Grid.Column="1"
                    FontFamily="Syne_Regular"
                    FontSize="14"
                    HorizontalOptions="Start"
                    HorizontalTextAlignment="Start"
                    Text="{Binding Pedido.nombreEstablecimiento}"
                    TextColor="{DynamicResource Amarillo}" />
                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    FontFamily="Syne_Medium"
                    FontSize="14"
                    HorizontalOptions="Start"
                    TextColor="{DynamicResource Rojo}">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Pago"/>
                            <Span Text=": "/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label
                    Grid.Row="3"
                    Grid.Column="1"
                    FontFamily="Syne_Regular"
                    FontSize="14"
                    HorizontalOptions="Start"
                    HorizontalTextAlignment="Start"
                    Text="{Binding Pedido.tipoPago}"
                    TextColor="{DynamicResource Amarillo}" />
                <Label
                    Margin="0,20,0,0"
                    Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    FontFamily="Syne_Medium"
                    FontSize="18"
                    HorizontalOptions="Center"
                    Text="Productos"
                    TextColor="{DynamicResource Rojo}" />
                <StackLayout
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    BindableLayout.ItemsSource="{Binding Pedido.lineasPedidos}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Orientation="Horizontal">
                                <Label
                                    FontFamily="Syne_Medium"
                                    FontSize="14"
                                    HorizontalOptions="Start"
                                    Text="{Binding cantidad}"
                                    TextColor="{DynamicResource Rojo}" />
                                <Label
                                    FontFamily="Syne_Medium"
                                    FontSize="14"
                                    HorizontalOptions="StartAndExpand"
                                    Text="{Binding nombreProducto}"
                                    TextColor="{DynamicResource Rojo}" />
                                <Label
                                    FontFamily="Syne_Medium"
                                    FontSize="14"
                                    HorizontalOptions="End"
                                    Text="{Binding importe, StringFormat='{0:N2}€'}"
                                    TextColor="{DynamicResource Amarillo}" />
                            </StackLayout>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
            </Grid>
            <Grid
                Margin="20,10"
                ColumnDefinitions="*"
                RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
                <Label
                    FontFamily="Syne"
                    FontSize="18"
                    HorizontalOptions="CenterAndExpand"
                    HorizontalTextAlignment="Center"
                    Text="Tu opinión nos ayuda a mejorar y ofrecerte un mejor servicio."
                    TextColor="{DynamicResource Rojo}" />
                <Grid ColumnDefinitions="*, Auto"
                    Grid.Row="1"
                    Margin="30,10,30,0"
                    HorizontalOptions="FillAndExpand">
                    <Label
                        Grid.Column="0"
                        FontFamily="Syne_Medium"
                        FontSize="14"
                        HorizontalOptions="Start"
                        Text="Servicio"
                        TextColor="{DynamicResource Rojo}"
                        VerticalTextAlignment="Center" />
                    <rating:SfRating
                        Grid.Column="1"
                        Margin="20,0,0,0"
                        HorizontalOptions="Start"
                        ItemSize="30"
                        Precision="Half"
                        VerticalOptions="Center"
                        Value="{Binding ValoracionPedido}">
                        
                            <!-- Rating fill configured via ItemStyle -->
                        
                    </rating:SfRating>
                </Grid>
                <Grid ColumnDefinitions="*, Auto"
                    Grid.Row="2"
                    Margin="30,10,30,0"
                    HorizontalOptions="FillAndExpand">
                    <Label
                        Grid.Column="0"
                        FontFamily="Syne_Medium"
                        FontSize="14"
                        HorizontalOptions="Start"
                        Text="Puntualidad"
                        TextColor="{DynamicResource Rojo}"
                        VerticalTextAlignment="Center" />
                    <rating:SfRating
                        Grid.Column="1"
                        Margin="20,0,0,0"
                        HorizontalOptions="Start"
                        ItemSize="30"
                        Precision="Half"
                        VerticalOptions="Center"
                        Value="{Binding ValoracionPuntualidad}">
                        
                            <!-- Rating fill configured via ItemStyle -->
                        
                    </rating:SfRating>
                </Grid>
                <Grid ColumnDefinitions="*, Auto"
                    Grid.Row="3"
                    Margin="30,10,30,0"
                    HorizontalOptions="FillAndExpand">
                    <Label
                        Grid.Column="0"
                        FontFamily="Syne_Medium"
                        FontSize="14"
                        HorizontalOptions="Start"
                        Text="Establecimiento"
                        TextColor="{DynamicResource Rojo}"
                        VerticalTextAlignment="Center" />
                    <rating:SfRating
                        Grid.Column="1"
                        Margin="20,0,0,0"
                        HorizontalOptions="Start"
                        ItemSize="30"
                        Precision="Half"
                        VerticalOptions="Center"
                        Value="{Binding ValoracionEstablecimiento}">
                        
                            <!-- Rating fill configured via ItemStyle -->
                        
                    </rating:SfRating>
                </Grid>
                <Grid ColumnDefinitions="*, Auto"
                    Grid.Row="4"
                    Margin="30,10,30,0"
                    HorizontalOptions="FillAndExpand">
                    <Label
                        Grid.Column="0"
                        FontFamily="Syne_Medium"
                        FontSize="14"
                        HorizontalOptions="Start"
                        HorizontalTextAlignment="End"
                        Text="Repartidor"
                        TextColor="{DynamicResource Rojo}"
                        VerticalTextAlignment="Center" />
                    <rating:SfRating
                        Grid.Column="1"
                        Margin="20,0,0,0"
                        HorizontalOptions="Start"
                        ItemSize="30"
                        Precision="Half"
                        VerticalOptions="Center"
                        Value="{Binding ValoracionRepartidor}">
                        
                            <!-- Rating fill configured via ItemStyle -->
                        
                    </rating:SfRating>
                </Grid>
                <Editor
                    Grid.Row="5"
                    Margin="0,10,0,0"
                    BackgroundColor="{DynamicResource Fondo}"
                    FontFamily="Syne_Regular"
                    FontSize="14"
                    HeightRequest=" 200"
                    Placeholder="Ingrese aquí su comentario"
                    Text="{Binding Comentario}"
                    TextColor="{DynamicResource Rojo}" />


            </Grid>
            
        </StackLayout>
    </ScrollView>
        <Button
                Margin="30,20"
                BackgroundColor="{DynamicResource Amarillo}"
                Command="{Binding cmdEnviarValoracion}"
                FontFamily="Syne_Medium"
                Text="Enviar valoración"
                TextColor="White" />
        </StackLayout>
</ContentPage>
