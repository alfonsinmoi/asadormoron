<?xml version="1.0" encoding="utf-8" ?>
<popup:PopupPage
    x:Class="AsadorMoron.Views.Establecimientos.PopupPageInfoPedido"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:popup="clr-namespace:Mopups.Pages;assembly=Mopups"
    BackgroundColor="Transparent">
    <popup:PopupPage.Content>
        <Frame
            Margin="20,0"
            Padding="10"
            BackgroundColor="{StaticResource Rojo}"
            HeightRequest="350"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <StackLayout>
                <Label
                    FontAttributes="Bold"
                    FontFamily="Syne"
                    FontSize="Title"
                    HorizontalOptions="CenterAndExpand"
                    HorizontalTextAlignment="Center"
                    Text="Datos Pedido"
                    TextTransform="Uppercase"
                    TextColor="White"
                    VerticalTextAlignment="Center" />
                <ListView
                    x:Name="lista"
                    BackgroundColor="Transparent"
                    HasUnevenRows="True"
                    SeparatorVisibility="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid
                                    Margin="0,3"
                                    ColumnDefinitions="30,*,Auto"
                                    RowDefinitions="*">
                                    <Label
                                        Grid.Column="0"
                                        Margin="10,0"
                                        FontFamily="Nunito"
                                        FontSize="15"
                                        Text="{Binding cantidad}"
                                        TextColor="White" />
                                    <Label
                                        Grid.Column="1"
                                        FontFamily="Nunito"
                                        FontSize="15"
                                        LineBreakMode="WordWrap"
                                        Text="{Binding nombreProducto}"
                                        TextColor="White" />
                                    <Label
                                        Grid.Column="2"
                                        Margin="10,0"
                                        FontFamily="Nunito"
                                        FontSize="15"
                                        HorizontalTextAlignment="End"
                                        Text="{Binding importe, StringFormat='{0:N2} €'}"
                                        TextColor="White" />
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </Frame>
    </popup:PopupPage.Content>
</popup:PopupPage>