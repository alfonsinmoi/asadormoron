<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AsadorMoron.Views.Informes.informesView"
             BackgroundColor="{DynamicResource Rojo}"
             NavigationPage.HasBackButton="True"
             NavigationPage.HasNavigationBar="True">
    <NavigationPage.TitleView>
        <Grid HorizontalOptions="FillAndExpand" ColumnDefinitions="*,Auto">
            <Label
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="0,0,50,0"
                FontFamily="Syne"
                FontSize="25"
                HorizontalTextAlignment="Center"
                Text="Informes"
                TextColor="{DynamicResource Negro}"
                VerticalOptions="Center" />
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout BackgroundColor="{DynamicResource Blanco}" Margin="{OnPlatform iOS='0,90,0,0',
                            Android='0,0,0,0',
                            UWP='0'}">
        <StackLayout Margin="50,30" VerticalOptions="StartAndExpand">
            <Button Command="{Binding IrBeneficiosCommand}" IsVisible="{Binding InformeVisibleByRol}" Text="Beneficios" HeightRequest="40" TextColor="White" BackgroundColor="{DynamicResource Negro}" FontFamily="Syne" Margin="0,10"/>
            <Button Command="{Binding IrMejoresClientesCommand}" Text="Mejores Clientes" HeightRequest="40" TextColor="White" BackgroundColor="{DynamicResource Negro}" FontFamily="Syne" Margin="0,10"/>
            <Button Command="{Binding IrProductosMasVendidosCommand}" IsVisible="{Binding InformeVisibleByRol}" Text="Más Vendidos" HeightRequest="40" TextColor="White" BackgroundColor="{DynamicResource Negro}" FontFamily="Syne" Margin="0,10"/>
            <Button Command="{Binding IrClientesInactivosCommand}" Text="Clientes Inactivos" HeightRequest="40" TextColor="White" BackgroundColor="{DynamicResource Negro}" FontFamily="Syne" Margin="0,10"/>
            <Button Command="{Binding IrTicketMedioCommand}"  IsVisible="{Binding InformeVisibleByRol}" Text="Ticket Medio" HeightRequest="40" TextColor="White" BackgroundColor="{DynamicResource Negro}" FontFamily="Syne" Margin="0,10"/>
        </StackLayout>
            </StackLayout>
    </ContentPage.Content>
</ContentPage>
