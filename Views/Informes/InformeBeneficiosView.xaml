                                            Margin="10,0"
                                            Padding="5"
                                            BackgroundColor="{DynamicResource Negro}"
                                            HorizontalOptions="StartAndExpand"
                                            LineBreakMode="TailTruncation"
                                            VerticalTextAlignment="Start">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span
                                                        BackgroundColor="Transparent"
                                                        FontAttributes="Bold"
                                                        FontFamily="Syne"
