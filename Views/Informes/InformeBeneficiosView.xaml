                                                        FontFamily="Syne"
                                                        FontSize="18"
                                                        Text="{Binding total, StringFormat='{0:N2}€'}"
                                                        TextColor="{DynamicResource Blanco}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label
                                            Grid.RowSpan="3"
                                            Grid.Column="1"
                                            Margin="10,0,20,10"
                                            FontFamily="Syne"
                                            Text="{Binding formato}"
                                            TextColor="{DynamicResource Negro}"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </tabView:SfTabItem.Content>
                </tabView:SfTabItem>
                <tabView:SfTabItem Header="Mensual">
                    <tabView:SfTabItem.Content>
                        <CollectionView
                            BackgroundColor="White"
                            ItemsSource="{Binding ListadoMensual}"
                            SelectionMode="Single">
                            <CollectionView.EmptyView>
                                <StackLayout>
                                    <Label
                                        Margin="15"
