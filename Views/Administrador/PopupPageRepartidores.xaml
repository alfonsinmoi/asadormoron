<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage
    x:Class="AsadorMoron.Views.Administrador.PopupPageRepartidores"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ff="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
    xmlns:ffTransformations="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
    xmlns:local="clr-namespace:AsadorMoron.ViewModels.Administrador"
    xmlns:pages="clr-namespace:Mopups.Pages;assembly=Mopups">
    <pages:PopupPage.BindingContext>
        <local:PopupPageRepartidoresViewModel x:Name="vm" />
    </pages:PopupPage.BindingContext>
        <Frame
            Margin="20,90"
            Padding="10"
            BackgroundColor="{StaticResource Rojo}"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Grid BackgroundColor="Transparent" RowDefinitions="Auto,*">
                <Label
                    Grid.Row="0"
                    Margin="0,10"
                    BackgroundColor="Transparent"
                    FontFamily="Syne"
                    FontSize="20"
                    HorizontalTextAlignment="Center"
                    Text="Repartidores"
                    TextColor="{DynamicResource Blanco}" />
                <CollectionView
                    x:Name="listView"
                    Grid.Row="1"
                    ItemsSource="{Binding ListadoRepartidores}"
                    SelectedItem="{Binding RepartidorSeleccionado}"
                    SelectionMode="Single">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid
                                ColumnDefinitions="70, *"
                                RowDefinitions="70"
                                RowSpacing="10">

                                <ff:CachedImage
                                    Grid.Column="0"
                                    HeightRequest="50"
                                    Source="{Binding foto}"
                                    VerticalOptions="Center"
                                    WidthRequest="50">
                                    <ff:CachedImage.Transformations>
                                        <!-- Transformation removed -->
                                    </ff:CachedImage.Transformations>
                                </ff:CachedImage>
                                <Label
                                    Grid.Column="1"
                                    BackgroundColor="Transparent"
                                    FontFamily="Nunito"
                                    Text="{Binding nombre}"
                                    TextColor="White"
                                    VerticalTextAlignment="Center" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </Frame>
</pages:PopupPage>